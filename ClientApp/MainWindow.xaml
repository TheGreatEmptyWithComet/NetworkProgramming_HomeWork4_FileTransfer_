<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="5">
            <TextBlock Text="File explorer:" FontWeight="Bold" DockPanel.Dock="Top"/>
            <Button Content="Copy to server" DockPanel.Dock="Bottom" Width="90" Height="28" Command="{Binding CopyFileCommand}" CommandParameter="{Binding Path=SelectedValue, ElementName=FileExplorerListView}"/>

            <ListView ItemsSource="{Binding FileClient.FileEntities}" Margin="0 5 0 5" MouseDoubleClick="ListView_MouseDoubleClick" x:Name="FileExplorerListView"/>
        </DockPanel>

        <DockPanel Grid.Column="1" Margin="5">
            <TextBlock Text="Log:" FontWeight="Bold" DockPanel.Dock="Top"/>
            <TextBlock Text="{Binding FileClient.LogMessage}" Background="AliceBlue"/>
        </DockPanel>


    </Grid>
</Window>
